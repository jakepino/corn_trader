<h1> WELCOME TO CORN TRADER WORLD WIDE <%=@user.name.upcase%> </h1>

<% if @current_user %>
  Logged in as <%= @current_user.email %> <br>
  <%= link_to "Markets Page", markets_path, :class => "btn btn-primary" %> <br>
  <%= link_to "Log Out", logout_path%> <br>
  <%= link_to "Delete Account", user_path(@current_user.id), method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>

<%if @offers.length>0 %>
        <ul>
      <%@offers.to_enum.with_index.reverse_each do |offer,i|%>
        <li> <%= i+1%>. price: <%=offer.price%>, quantity: <%=offer.corn_quantity%></li><br>
      <%end%>
       </ul>
    <%else%>
       <h1>PRAY TO GOD FOR MORE CORN</h1> 
    <%end%>

<h1>======================offers=========================</h1>

<h1>=======================bids==========================</h1>
<%if @bids.length>0 %>
        <ul>
      <%@bids.each_with_index do |bid,i|%>
        <li> <%= i+1%>. price: <%=bid.price%>, quantity: <%=bid.corn_quantity%></li><br>
      <%end%>
       </ul>
    <%else%>
       <h1>NO ONE WANTS TO BUY YOUR PATHETIC CORN</h1> 
    <%end%>

<h1>=======================================================</h1>

<h1>your corn total is: <%=@user.amount_of_corn%>       your cash balance is: <%=@user.amount_of_money%></h1>
<%if @bids.length>0%>
<%= button_to 'Market Sell', {:controller => "trades",:action=>"market_sell",:user_id=>@user.id,:bid_id=> @bids[0].id}, method: :post %>
<%end%>
<%if @offers.length>0%>
 <%= button_to 'Market Buy', {:controller => "trades",:action=>"market_buy",:user_id=>@user.id,:offer_id=> @offers[0].id}, method: :post %>
<%end%>

<%=form_for @bid do |f| %>
price <%=f.number_field :price%>
quantity<%=f.number_field :corn_quantity%>
<%= f.hidden_field :user_id, value: @user.id%>
<%=f.submit%>
<%end%>

<%=form_for @offer do |f| %>
price <%=f.number_field :price%>
quantity<%=f.number_field :corn_quantity%>
<%= f.hidden_field :user_id, value: @user.id%>
<%=f.submit%>
<%end%>

<h1>===================open bids===================</h1>
    <%if @user.bids%>
      <% @user.bids.each do |bid|%>
            <div class="Bids">
          <span><%= bid.price %></span>
          <%= button_to "Delete bid",{:controller => "bids",:action=>"destroy_bid",:id=> bid.id,:user_id=>@user.id}, method: :post, data: { confirm: "Really?" } %>
            </div>
      <%end%>

    <%end%>



<h1>===================open offers==================</h1>
   <%if @user.offers%>
      <% @user.offers.each do |offer|%>
            <div class="Offers">
          <span><%= offer.price %></span>
          <%= button_to "Delete Offer",{:controller => "offers",:action=>"destroy_offer",:id=> offer.id,:user_id=>@user.id}, method: :post, data: { confirm: "Really?" } %>
            </div>
      <%end%>
     <%end%>

<ul>
<li>Your total number of trades is <%= @current_user.total_trades %></li>
<li>Your total money traded is $<%= @current_user.total_money %></li>
<li>Your total corn traded is <%= @current_user.total_corn %></li>
<% if !@current_user.bids.empty? %>
<li>Your average Bid is <%= @current_user.ave_bid %></li>
<% end %>
<% if !@current_user.offers.empty? %>
<li>Your average Offer is <%= @current_user.ave_offer %></li>
<% end %>
</ul>
